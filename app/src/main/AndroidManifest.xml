<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.triforce.namami">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.triforce.namami.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/poojanam"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.triforce.namami.Splash_Screen"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.triforce.namami.Change_Language"
            android:label="Choose Language" />
        <activity
            android:name="com.triforce.namami.Dashboard"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
        <activity
            android:name="com.triforce.namami.PoojaInformation"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
        <activity
            android:name="com.triforce.namami.Pooja_Detail"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
        <activity
            android:name="com.triforce.namami.Aarati_Detail"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
        <activity
            android:name="com.triforce.namami.About_Poojanam"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
        <activity android:name="com.triforce.namami.Send_Feedback"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
    </application>

</manifest>
